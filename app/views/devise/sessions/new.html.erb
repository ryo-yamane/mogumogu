
<%= form_with model: @user, url:user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header2'>
      
      <p>アカウントをお持ちでない方はこちら</p>
      
      <div>
          <%= link_to users_path, class:"btn btn-c btn--green btn--cubic new-regi" do %>
          <span>新規会員登録</span>
          <% end %>
        </div>
    </div>
  
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

    <div class="form-group-registration">
      <div class='form-text-wrap'>
        <div class="form-text-registration">
          <%= link_to user_facebook_omniauth_authorize_path, method: :post, class:"btn btn-c btn--green btn--cubic facebook" do %> 
            <i class="bi bi-facebook"></i>
            <span>facebookでログイン</span>
           <% end %> 
        </div>
      </div>    
    </div>

      <div class="form-group-registration">
        <div class='form-text-wrap'>
          <div class="form-text-registration">
           <%= link_to  user_google_oauth2_omniauth_authorize_path, method: :post, class:"btn btn-c btn--green btn--cubic google" do %> 
           <i class="bi bi-google"></i>
           <span>Googleでログイン</span>
           <% end %> 
        </div>
       </div>
     </div> 
  <div class="form-group-sub">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group-sub">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

