
  <% @tweets.each do |tweet| %>
  <div class="contents row">
      <div class="post-all">
        <div class="contents-header">
          <%= link_to "ユーザー名", "#"%>
           <div class="more">

             <ul class="more_list">
              <li class="lint-content">
               <%= link_to '編集', tweet_path(tweet.id) %>
               <%= link_to '削除', tweet_path(tweet.id) , method: :delete%>
              </li>
             </ul>
           </div>
       </div>
       <%= link_to "#", class: 'item-img' do  %>
          <%= image_tag tweet.image   ,class: "content_post" %>
          
       <% end %>

        <div class='item-info'>
          <h3 class='item-name'>
            <%= link_to "商品名：#{tweet.name}", "#", method: :get %>
            
          </h3>
          <div class='item-price'>
            <span><%= link_to "商品価格：#{tweet.price}円" %><br>
            <%= link_to "カテゴリ：#{tweet.category_id}" , "#", method: :get %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
      </div>
     </div>
    </div>
    
  <% end %>
