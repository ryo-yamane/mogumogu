<%= form_with model:tweet,local: true do |form| %>
      
      <%= form.file_field :images, name: 'tweet[images][]' ,id:"item-image" %>
         <div id="image-list"></div>
         <canvas id="canvas" width="0" height="0"></canvas>

         <%@tweet.images.each do |image|%>
         <%= image_tag image, class: 'images' %>
         <% end %>

      <div class="takeshi">商品名<span class="indispensable">必須</span>
      <%= form.text_field :name, placeholder: "Product name" %>
     </div>

       <div class="takeshi">感想<span class="indispensable">必須</span>
      <%= form.text_area :text, placeholder: "商品に関する感想を入力してください", rows: "10" %>
    </div>

     <div class="takeshi">価格（税込）<span class="indispensable">必須</span>
      <%= form.text_field :price, placeholder: "半角数字で入力してください"%>
      </div>

      <div class="takeshi">JANコード
      <%= form.text_field :jan_code, placeholder: "半角英数で入力してください"%>
      </div>

       <div class="takeshi1">お菓子のカテゴリー<span class="indispensable">必須</span>
       <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %> 
       </div>

       <div class="takeshi1">メーカー名<span class="indispensable">必須</span>
       <%= form.collection_select(:company_id, Company.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %> 
       </div>

       <div class="takeshi1">食感<span class="indispensable">必須</span>
      <%= form.collection_select(:texture_id, Texture.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
      
      <%= form.submit "SEND" %>
    <% end %>